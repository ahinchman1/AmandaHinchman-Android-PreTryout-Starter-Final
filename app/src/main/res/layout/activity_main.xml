<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

  <Button
      android:id="@+id/decrement"
      android:layout_width="50dp"
      android:layout_height="wrap_content"
      android:text="@string/decrement"
      app:layout_constraintTop_toTopOf="@id/tipPercent"
      app:layout_constraintEnd_toStartOf="@id/tipPercent"
      app:layout_constraintStart_toStartOf="parent"/>

  <EditText
      android:id="@+id/tipPercent"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAlignment="center"
      android:textSize="24sp"
      android:autofillHints="@string/default_percent"
      android:hint="@string/default_percent"
      android:ems="6"
      android:inputType="number"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toEndOf="@id/decrement"
      app:layout_constraintEnd_toStartOf="@id/increment"/>

  <Button
      android:id="@+id/increment"
      android:layout_width="50dp"
      android:layout_height="wrap_content"
      android:text="@string/increment"
      app:layout_constraintTop_toTopOf="@id/tipPercent"
      app:layout_constraintStart_toEndOf="@id/tipPercent"
      app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

  <TextView
      android:id="@+id/billLabel"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:paddingStart="0dp"
      android:paddingEnd="16dp"
      android:text="@string/bill"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toStartOf="@id/billEditText"
      app:layout_constraintTop_toTopOf="@id/billEditText"
      app:layout_constraintBottom_toBottomOf="@id/billEditText"/>

  <EditText
      android:id="@+id/billEditText"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:ems="10"
      android:gravity="center"
      android:hint="@string/default_bill_amount"
      android:inputType="numberDecimal"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toEndOf="@id/billLabel"
      app:layout_constraintEnd_toEndOf="parent"/>

  <TextView
      android:id="@+id/tipPercentLabel"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/tip"
      app:layout_constraintTop_toBottomOf="@id/billLabel"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toStartOf="@id/decrement"/>

  <Button
      android:id="@+id/decrement"
      android:layout_width="50dp"
      android:layout_height="wrap_content"
      android:text="@string/decrement"
      app:layout_constraintStart_toStartOf="@id/billEditText"
      app:layout_constraintTop_toBottomOf="@id/billEditText"/>

  <EditText
      android:id="@+id/tipPercent"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAlignment="center"
      android:hint="@string/default_percent"
      android:ems="4"
      android:inputType="number"
      app:layout_constraintStart_toEndOf="@id/decrement"
      app:layout_constraintEnd_toStartOf="@id/increment"
      app:layout_constraintTop_toBottomOf="@id/billEditText"/>

  <Button
      android:id="@+id/increment"
      android:layout_width="50dp"
      android:layout_height="wrap_content"
      android:text="@string/increment"
      app:layout_constraintEnd_toEndOf="@id/billEditText"
      app:layout_constraintStart_toEndOf="@id/tipPercent"
      app:layout_constraintTop_toBottomOf="@id/billEditText"/>


</androidx.constraintlayout.widget.ConstraintLayout>